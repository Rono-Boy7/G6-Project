  <div class="container-fluid">
    <a class="navbar-brand" href="/">Campus Tournaments</a> 
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent"> <!-- When Page Is Resized, The NavBar Resizes Too -->
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

        <li class="nav-item"> <!-- When Home Clicked, Redirects You To Home Page, With Bootstrap Icons -->
          <a class="nav-link active" aria-current="page" href="/home"><i class="fa-solid fa-spa fa-beat-fade"></i> Home</a>
